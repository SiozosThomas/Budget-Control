<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Balance"
    android:background="?attr/colorPrimary">


    <TextView
        android:id="@+id/user_name_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="User Name"
        android:textAlignment="center"
        android:textColor="@color/menu_text_color"
        android:textSize="18sp"
        android:textStyle="italic"
        app:fontFamily="@font/eczar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_outcome_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#243447"
        android:shadowColor="#000000"
        android:text="Add Outcome"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="italic"
        app:fontFamily="@font/eczar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_balance" />

    <TextView
        android:id="@+id/income_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Income"
        android:paddingRight="8dp"
        android:textColor="@color/menu_text_color"
        android:textSize="18sp"
        android:textStyle="italic"
        app:fontFamily="@font/eczar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_outcome_button"
        android:paddingEnd="8dp" />

    <TextView
        android:id="@+id/outcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingRight="8dp"
        android:text="Outcome"
        android:textColor="@color/menu_text_color"
        android:textSize="18sp"
        android:textStyle="italic"
        app:fontFamily="@font/eczar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income_txt" />


</android.support.constraint.ConstraintLayout>